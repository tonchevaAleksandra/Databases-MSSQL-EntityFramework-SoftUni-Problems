@using RealEstates.Services.Models;
@model IEnumerable<DistrictViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Real Estates BG!</h1>
    <p>Hello to everyone in this sunny @DateTime.UtcNow.DayOfWeek!</p>
    <p>It is always sunny here because our prices are so high that they always exceed  the cloud's limits! :) @*<a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a*@</p>
</div>
@*<p align="center">Искаш ли да си купиш имот на изгодна цена?! </p>
<p align="center">Цените са в €, не се обнадеждавайте излишно! </p>*@
<table class="table table-striped table-hover align-content-lg-center align-items-center" table-sm>
    <tr>
        <th>District/Кватрал</th>
        <th>Properties/Брой Имоти</th>
        <th>Avg. Price/Средна цена на кв.м в €</th>
        <th>Min. Price/Минимална цена на кв.м в €</th>
        <th>Max. Price/Максимална цена на кв.м в €</th>
    </tr>
    @foreach (var district in this.Model.Where(x=>x.PropertiesCount>=20))
    {
        <tr>
            <td>@district.Name</td>
            <td>@district.PropertiesCount</td>
            <td>@district.AveragePrice.ToString("0.00")€</td>
            <td>@district.MinPrice.ToString("0.00")€</td>
            <td>@district.MaxPrice.ToString("0.00")€</td>
        </tr>
    }
</table>


